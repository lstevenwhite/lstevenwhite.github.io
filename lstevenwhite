    <!-- Add a button to scroll to the top of the page -->
    <button onclick="topFunction()" id="myBtn" title="Go to top">TOP</button>

    <script>
        // When the user scrolls down 20px from the top of the document, show the button
        window.onscroll = function() {scrollFunction()};

        function scrollFunction() {
            if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
                document.getElementById("myBtn").style.display = "block";
                document.getElementById("myBtn").style.position = "fixed";
                document.getElementById("myBtn").style.bottom = "100px";
                document.getElementById("myBtn").style.right = "100px";
                document.getElementById("myBtn").style.border = "none"; // 不要边框
                document.getElementById("myBtn").style.backgroundColor = "lightblue"; // add this line to change background color
                document.getElementById("myBtn").style.borderRadius = "50%"; // add this line to make the button round
                document.getElementById("myBtn").style.width = "50px"; // add this line to make the button wider
                document.getElementById("myBtn").style.height = "50px"; // add this line to make the button taller
                document.getElementById("myBtn").style.fontSize = "15px"; // add this line to make the font size larger
            } else {
                document.getElementById("myBtn").style.display = "none";
                document.body.style.backgroundColor = "white"; // add this line to change background color back to white
            }
        }

        // When the user clicks on the button, scroll to the top of the document
        function topFunction() {
            document.body.scrollTop = 0; // For Safari
            document.documentElement.scrollTop = 0; // For Chrome, Firefox, IE and Opera
        }
    </script>
